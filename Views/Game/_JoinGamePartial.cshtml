@model JoinGameViewModel

<div class="modal fade" id="joingame-modal" tabindex="-1" role="dialog" aria-labelledby="joinGameLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="joinGameLabel">Join Game</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Game" asp-action="Join" method="Post">
                    <div class="form-group">
                        <label>Game Title</label>
                        <input id="gameTitle" data-url='@Url.Action("Search", "Game")' class="form-control" />
                        <input id="gameId" asp-for="GameId" type="hidden" />
                        <span asp-validation-for="GameId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-save="modal">Join</button>
            </div>
        </div>
    </div>
</div>